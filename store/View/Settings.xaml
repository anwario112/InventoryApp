<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="store.View.Settings"
             BackgroundColor="{StaticResource Gray1000}"
             Title="Settings">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" RowSpacing="10">
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Stroke="Transparent"
                StrokeThickness="2"
                BackgroundColor="{StaticResource White}"
                HeightRequest="60"  WidthRequest="350"
                Margin="10,30,10,200">
         
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Border.GestureRecognizers>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" VerticalOptions="Center" Spacing="10" Padding="10,0">
                <Image Source="connection.png" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       HeightRequest="25" 
                       WidthRequest="50" />
                <Label Text="Database Connection " 
                       VerticalOptions="Center"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray500}"  
                       Margin="0,-5,0,0"/>
                <Image Source="next.png" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       HeightRequest="30"
                       Margin="30,0,0,0"/>
            </StackLayout>
        </Border>


        <Border Grid.Row="0" Grid.ColumnSpan="2"
         Stroke="Transparent"
         StrokeThickness="2"
         BackgroundColor="{StaticResource White}"
         HeightRequest="60"  WidthRequest="350"
         Margin="10,30,10,60">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="AddUserTap" />
            </Border.GestureRecognizers>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" VerticalOptions="Center" Spacing="10" Padding="10,0">
                <Image Source="user.png" 
                HorizontalOptions="Center" 
                VerticalOptions="Center" 
                HeightRequest="25" 
                WidthRequest="50" />
                <Label Text="Add User " 
                VerticalOptions="Center"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="{StaticResource Gray500}"  
                Margin="0,-5,0,0"/>
                <Image Source="next.png" 
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="30"
                Margin="140,0,0,0"/>
            </StackLayout>
        </Border>



        <Border Grid.Row="5" Grid.ColumnSpan="2"
          Stroke="Transparent"
          StrokeThickness="2"
          BackgroundColor="{StaticResource White}"
          HeightRequest="60"  WidthRequest="350"
          Margin="10,-250,10,10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="archiveTap" />
            </Border.GestureRecognizers>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" VerticalOptions="Center" Spacing="10" Padding="10,0">
                <Image Source="archive.png" 
                 HorizontalOptions="Center" 
                 VerticalOptions="Center" 
                 HeightRequest="35" 
                 WidthRequest="50" />
                <Label Text="archive" 
                 VerticalOptions="Center"
                 FontSize="20"
                 FontAttributes="Bold"
                 TextColor="{StaticResource Gray500}"  Margin="0,-5,0,0"/>
                <Image Source="next.png" 
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 HeightRequest="30"
                 Margin="160,0,0,0"/>
            </StackLayout>
        </Border>
    </Grid>
</ContentPage>
