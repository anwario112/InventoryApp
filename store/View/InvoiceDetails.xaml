<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="store.View.InvoiceDetails"
             Title="InvoiceDetails">

    <StackLayout Padding="15">
        <Label Text="Invoice Details" FontSize="18" TextColor="{StaticResource Gray400}" FontFamily="roman"/>

        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="10" Padding="20">
            <Border WidthRequest="50" HeightRequest="50" Stroke="Transparent" StrokeThickness="2" BackgroundColor="{StaticResource Gray200}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30" />
                </Border.StrokeShape>
                <Label x:Name="InitialsLabel" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Border>

            
            <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="5">
                <Label x:Name="FirstNameLabel" FontSize="20" TextColor="{StaticResource Black}"/>
                <Label x:Name="LastNameLabel" FontSize="20" TextColor="{StaticResource Black}"/>
            </StackLayout>
        </StackLayout>

        <BoxView HeightRequest="2" BackgroundColor="{StaticResource Gray100}" HorizontalOptions="FillAndExpand" WidthRequest="350"/>

    </StackLayout>
</ContentPage>
