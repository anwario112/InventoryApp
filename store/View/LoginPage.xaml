<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:ur="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="store.View.LoginPage"
             Title="LoginPage">

    <Grid>
        <!-- Path shape -->
        <Path Fill="#047bf9" 
              Data="m-229.99995,-7.0942l816.9999,0l0,100.06955c-326.93655,96.04298 -450.49995,96.17533 -816.9999,16.46451l0,-116.53406z" />

        
        <Image Source="login.png" 
               HeightRequest="60" 
               WidthRequest="60" 
               HorizontalOptions="Center" 
               VerticalOptions="Center" 
               Margin="0,0,30,600"/>

       
        <StackLayout Padding="20" Margin="0,170,0,0">
            <Label Text="Login" FontSize="28"
                   FontFamily="roman"
                   TextColor="{StaticResource teal}"
                   HorizontalOptions="Start" 
                   VerticalOptions="Center" 
                   Margin="0,0,0,0"/>
            <Label Text="Welcome back to the App" 
                   TextColor="{StaticResource Gray400}" 
                   Margin="5,2,0,0"/>
        </StackLayout>

        <StackLayout Margin="0,300,0,0" >
            <ur:TextField Title="UserName" x:Name="Username"  WidthRequest="300" />
            <ur:TextField Title="Password" x:Name="Password" WidthRequest="300" Margin="0,20,0,0" IsPassword="True"/>

            <Border Stroke="Transparent"
                    StrokeThickness="2"
                    BackgroundColor="{StaticResource White}"
                    
                    HeightRequest="50" 
                    WidthRequest="300" Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Button Text="Login" 
                        BackgroundColor="{StaticResource teal}" 
                        TextColor="White" 
                        VerticalOptions="Center" 
                        HorizontalOptions="FillAndExpand" Clicked="loginTap" />
            </Border>
        </StackLayout>
    </Grid>
</ContentPage>