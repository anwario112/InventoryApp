<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:store.View"
               x:Class="store.View.PackingPopup">
    <Border Stroke="Transparent"
            StrokeThickness="2"
            BackgroundColor="{StaticResource White}"
            HeightRequest="470" WidthRequest="400">

        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10"/>
        </Border.StrokeShape>
        <StackLayout Padding="10">

            <Label Text="Select Barcode" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Start" 
                   FontSize="19" 
                   Margin="0,10,0,0"/>

            <CollectionView ItemsSource="{Binding BarcodeItems}"
                         
                            VerticalOptions="FillAndExpand" 
                            HorizontalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <local:packingCard />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

         
            <Button Text="Update Selected Items" 
                    Command="{Binding UpdateCommand}" 
                    IsEnabled="True"/>
          
        </StackLayout>
    </Border>
</toolkit:Popup>