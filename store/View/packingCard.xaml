<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="store.View.packingCard">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Stroke="Transparent"
                StrokeThickness="2"
                BackgroundColor="{Binding BackgroundColor}" 
            HeightRequest="120"
                WidthRequest="250"
                Margin="10,30,10,-40">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15" />
            </Border.StrokeShape>

            <Grid Padding="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <BoxView WidthRequest="10" 
                         BackgroundColor="{StaticResource teal}" 
                         HorizontalOptions="Start" 
                         VerticalOptions="Fill" />


                <CheckBox IsChecked="{Binding IsChecked}" 
                  VerticalOptions="Center" 
                  HorizontalOptions="Start" Margin="0,0,0,40" />

                <StackLayout Padding="10" Margin="40,0,0,0">
                    <Label Text="{Binding Barcode}" FontSize="20" TextColor="Black" />
                    <Label Text="{Binding UnitDesc}" FontSize="16" TextColor="Gray" />
                    <Label Text="{Binding Price,StringFormat='${0:F2}'}" FontSize="16" TextColor="Gray"  HorizontalOptions="End" Margin="0,-19,0,0" />
                </StackLayout>
            </Grid>
        </Border>
    </Grid>
</ContentView>